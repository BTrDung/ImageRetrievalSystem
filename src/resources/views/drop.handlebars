<script src="http://code.jquery.com/jquery-2.1.0.min.js"></script>
<div class='mt-3'>
    <div align='center' style="margin-bottom: 40px">
        <h1>Upload image to query </h1>
    </div>
    <div align="center" style="margin-bottom: 40px" class='area'> 
        <a id='coordinate'>

        <img id = "input-image" src ="public/img/image_input.jpg"  class="img-fluid" alt="Responsive image" onclick="getCoordinate(event)">
          <div class="rect">
            <div class="exclusion-x"></div>
            <div class="exclusion-y"></div>
        </div>
        </a>
    </div>

    
    <form method="POST" enctype="application/x-www-form-urlencoded" action="/drop" class='form-column'>
        <div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="xtop" class="sr-only">x top</label>
                <input type="text" class="form-control" name="xtop" placeholder="Type in x-top coordinates"> 
            </div>

            <div class="form-group mx-sm-3 mb-2">
                <label for="ytop" class="sr-only">y top</label>
                <input type="text" class="form-control" name="ytop" placeholder="Type in y-top coordinates"> 
            </div>


            <div class="form-group mx-sm-3 mb-2">
                <label for="xbot" class="sr-only">x bot</label>
                <input type="text" class="form-control" name="xbot"  placeholder="Type in x-bot coordinates"> 
            </div>

            <div class="form-group mx-sm-3 mb-2">
                <label for="ybot" class="sr-only">y bot</label>
                <input type="text" class="form-control" name="ybot"  placeholder="Type in y-bot coordinates"> 
            </div>
        </div>
        <div style=" display: block; flex-direction: column" align='center' >
            <input type="submit" value="Confirm"  class="btn btn-primary mb-2"> 
        </div>
        </form>
</div> 